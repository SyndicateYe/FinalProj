<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ece420.lab7.PossionEdit">

    <TextView
        android:id="@+id/or_ti"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="15dp"
        android:text="Original Masking/Target Image"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/fi_ti"
        android:layout_width="221dp"
        android:layout_height="45dp"
        android:layout_below="@+id/ma_im"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="Final Image"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <ImageView
        android:id="@+id/ta_im"
        android:layout_width="197dp"
        android:layout_height="184dp"
        android:layout_below="@+id/or_ti"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="193dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        tools:srcCompat="@tools:sample/avatars[3]" />

    <ImageView
        android:id="@+id/fi_im"
        android:layout_width="309dp"
        android:layout_height="312dp"
        android:layout_below="@+id/fi_ti"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="49dp"
        tools:srcCompat="@tools:sample/avatars[11]" />

    <TextView
        android:id="@+id/HorizontalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ta_im"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:text="horizontal"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <SeekBar
        android:id="@+id/hSeekBar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HorizontalTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:max="100" />

    <TextView
        android:id="@+id/verticalTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:text="vertical"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <SeekBar
        android:id="@+id/vSeekBar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verticalTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:max="480" />

    <Button
        android:id="@+id/PoinssonButton"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="9dp"
        android:text="@string/yes" />

    <TextView
        android:id="@+id/size"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:text="size"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <SeekBar
        android:id="@+id/sSeekBar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/size"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:max="480" />

    <ImageView
        android:id="@+id/ma_im"
        android:layout_width="197dp"
        android:layout_height="184dp"
        android:layout_below="@+id/or_ti"
        android:layout_marginTop="1dp"
        tools:srcCompat="@tools:sample/avatars[2]" />

</RelativeLayout>